<p id="notice"><%= notice %></p>

<h1>Softwares</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image_url</th>
      <th>Category</th>
      <th>Content</th>
      <th>Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @softwares.each do |software| %>
      <tr>
        <td><%= software.name %></td>
        <td><img src="<%= software.image_url %>" style="height: 100px; width: 100px" alt="Logo"></td>
        <td><%= software.category.name %></td>
        <td><%= software.content %></td>
        <td><%= software.site %></td>
        <td><%= link_to 'Show', software %></td>
        <td><%= link_to 'Edit', edit_software_path(software) %></td>
        <td><%= link_to 'Destroy', software, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

