<p id="notice"><%= notice %></p>

<div class="header-container">
  <div class="page-header">
    <div class="page-header_content">
      <h1><i class="fas fa-tools"></i> Ferramentas</h1>
    </div>
  </div>
</div>

<main class="softwares-main">
  <section class="softwares">
    <% @tools.each do |tool| %>
    <div class="software_card">
        <img class="img-center" src="<%=tool.image_url%>" style="height:100px; width:100px;" alt="logo">
        <a href="tools/<%=tool.id%>/edit"><i class="fas fa-pen"></i></a>
      <div class="software_card-content">
        <!-- <a class="card_link" href="<%#= "/softwares/#{software.id}/edit" %>"> -->
          <div class="software_card-header">
            <div class="software_card-header__primmary">
              <div class="software_category">
                <span class="badge bg-<%=tool.category.image_url%>"><%= tool.category.name %></span>
              </div>
              <h3 class="software_name"><%= tool.name %></h3>
            </div>
          </div>
          <div class="software_card-body">
            <%= tool.content %>
          </div>
          <a target=”_blank” href="<%= tool.site%>" class="btn btn-primary software_btn"> Ver Site</a>
        <!-- </a> -->
      </div>

    </div>
    <% end %>

    <div class="software_card">
        <img class="img-center" src="http://www.shoppingdopapel.com.br/images/products/empty.png" style="height:100px; width:100px;" alt="logo">
      <div class="software_card-content">
        <!-- <a class="card_link" href="<%#= "/softwares/#{software.id}/edit" %>"> -->
          <div class="software_card-header">
            <div class="software_card-header__primmary">
              <div class="software_category">
                <span class="badge bg-dark">Criador</span>
              </div>
              <h3 class="software_name">Criar Ferramenta</h3>
            </div>
          </div>
          <div class="software_card-body">
            Clique no botão abaixo para cadastrar uma ferramenta
          </div>
          <div class="my-card-button">
              <%= link_to 'Criar', new_tool_path, class:'btn btn-primary' %>
          </div>
        <!-- </a> -->
      </div>
    </div>
  </section>
</main>
